#include<stdio.h>

int main()
{
    //SUMA de los n números naturales 
    int n;
    printf("ingresa un número: ");
    scanf("%d",&n);
    
    
    printf("Suma de los %d números consecutivos\n",n);
    
        for(int i=0;i<n;i++)
        {
           printf("%d+",i);
        }
        printf("%d",n);
    
        n=n*(n+1)/2;
    
    printf(" = %d",n);
    return 0;
}